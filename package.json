{
  "name": "versionist",
  "version": "6.1.1",
  "main": "bin/versionist.js",
  "description": "Flexible CHANGELOG generation toolkit that adapts to your commit conventions",
  "homepage": "https://github.com/balena-io/versionist",
  "repository": {
    "type": "git",
    "url": "git@github.com:balena-io/versionist.git"
  },
  "preferGlobal": true,
  "bin": {
    "versionist": "./bin/cli.js"
  },
  "scripts": {
    "test": "npm run prepare && npm run lint && mocha tests -R spec && node tests/cli/run",
    "test-cli": "npm run prepare && node tests/cli/run",
    "lint:javascript": "eslint src/ tests/ bin/",
    "lint:typescript": "resin-lint --typescript src/ && tsc --noEmit",
    "lint": "npm run lint:javascript && npm run lint:typescript",
    "prepare": "npx tsc",
    "prettify": "prettier --config ./node_modules/resin-lint/config/.prettierrc --write *.ts \"src/**/*.ts\"",
    "versionist": "./bin/cli.js"
  },
  "author": "Juan Cruz Viotti <juan@resin.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "eslint": "^4.18.2",
    "husky": "^2.1.0",
    "indent-string": "^3.0.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "mochainon": "^1.0.0",
    "prettier": "^1.17.0",
    "resin-lint": "^3.0.2",
    "shelljs": "^0.7.3",
    "tmp": "0.0.28",
    "touch": "^3.1.0"
  },
  "dependencies": {
    "@octokit/rest": "^15.10.0",
    "@types/handlebars": "^4.1.0",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.123",
    "@types/semver": "^6.0.0",
    "async": "^2.0.0-rc.6",
    "chalk": "^1.1.3",
    "debug": "2.5.1",
    "handlebars": "^4.1.2",
    "handlebars-helpers": "^0.10.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.13.1",
    "markdown": "^0.5.0",
    "replace-in-file": "^2.5.0",
    "resin-semver": "^1.6.0",
    "update-json": "https://github.com/balena-io-modules/update-json",
    "yargs": "^11.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
